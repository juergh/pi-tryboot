#!/bin/bash -eu
#
# Update tryboot entries
#

function usage()
{
	cat <<EOF
Usage: $(basename "${0}") [-h] [TBE]

Update tryboot entries (TBEs).

Optional arguments:
  -h, --help  Show this help text and exit.
EOF
}

tbe=

while [ ${#} -ne 0 ] ; do
	case "${1}" in
		-h|--help)
			usage
			exit
			;;
		*)
			if [ -n "${tbe}" ] ; then
				echo "Invalid argument: ${1}" >&2
				exit 2
			fi
			tbe=${1}
			;;
	esac
	shift
done

# shellcheck disable=SC1091
. /usr/lib/rpi-tryboot/functions

if [ -z "${tbe}" ] ; then
	echo "-- Update all tryboot entries"
	tb_update_all_tbes
	tb_print_config > "${TB_DIR}"/tryboot.cfg
	exit
fi

if ! tb_tbe_exists "${tbe}" ; then
	echo "-- No such tryboot entry: ${tbe}" >&2
	tb_untrap_exit
	exit 1
fi

echo "-- Update tryboot entry: ${tbe}"
tb_update_tbe "${tbe}"
tb_print_config > "${TB_DIR}"/tryboot.cfg
