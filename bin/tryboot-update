#!/bin/bash -eu
#
# Update tryboot entries
#

function usage()
{
	cat <<EOF
Usage: $(basename "${0}") [-h] [ENTRY]

Update tryboot entries (TBEs).

Optional arguments:
  -h, --help  Show this help text and exit.
EOF
}

tbe=

while [ ${#} -ne 0 ] ; do
	case "${1}" in
		-h|--help)
			usage
			exit
			;;
		*)
			if [ -n "${tbe}" ] ; then
				echo "Invalid argument: ${1}" >&2
				exit 2
			fi
			tbe=${1}
			;;
	esac
	shift
done

# shellcheck disable=SC1091
. /usr/lib/rpi-tryboot/lib.sh

if [ -n "${tbe}" ]  ; then
	if tb_tbe_exists "${tbe}" ; then
		echo "-- Update tryboot entry: ${tbe}"
		tb_update_tbe "${tbe}"
		exit
	fi
	echo "-- No such tryboot entry: ${tbe}" >&2
    tb_untrap_exit
    exit 1
fi

while read -r tbe ; do
	echo "-- Update tryboot entry: ${tbe}"
	tb_update_tbe "${tbe}"
done < <(tb_print_tbe_list)
