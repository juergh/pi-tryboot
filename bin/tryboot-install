#!/bin/bash -eu
#
# Install a tryboot entry
#

function usage()
{
	cat <<EOF
Usage: $(basename "${0}") [-h] [-r] TBE

Install a tryboot entry (TBE).

Positional arguments:
  TBE           TBE name. Must be a kernel version of an installed kernel or:
                  tryboot:        Install the main tryboot TBE. When selected,
                                  this entry boots into the tryboot boot menu.
                  system-default: Install the system default TBE. When
                                  selected, this entry boots the 'original'
                                  kernel, i.e., the system's default kernel.

Optional arguments:
  -h, --help    Show this help text and exit.
  -r, --remove  Remove the TBE.
EOF
}

remove=0
tbe=

while [ ${#} -ne 0 ] ; do
	case "${1}" in
		-h|--help)
			usage
			exit
			;;
		-r|--remove)
			remove=1
			;;
		*)
			if [ -n "${tbe}" ] ; then
				echo "Invalid argument: ${1}" >&2
				exit 2
			fi
			tbe=${1}
			;;
	esac
	shift
done

if [ -z "${tbe}" ] ; then
	usage
	exit 2
fi

# shellcheck disable=SC1091
. /usr/lib/rpi-tryboot/lib.sh

if [ ${remove} -eq 1 ] ; then
	if tb_tbe_exists "${TBE}" ; then
	   echo "-- Remove tryboot entry: ${TBE}"
	   tb_remove_tbe "${TBE}"
	   exit
	fi
	echo "-- No such tryboot entry: ${tbe}" >&2
	tb_untrap_exit
	exit 1
fi

echo "-- Install tryboot entry: ${tbe}"
tb_install_tbe "${tbe}"

# Update the TBE
tryboot-update "${tbe}"
